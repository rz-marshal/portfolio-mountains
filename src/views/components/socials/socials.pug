mixin socials(mod, mod2)
 - var socials = [['https://vk.com/rz-marshal', "vk"],['https://github.com/rz-marshal', "github"],['https://github.com/rz-marshal', "in"]]
    ul(class='socials')
        each item in socials
            li.socials__item
                a(href=`${item[0]}`, class='socials__link'  + mod2)
                  +icon(item[1], 'socials__icon socials__icon--' + mod)