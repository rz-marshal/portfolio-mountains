.preloader.preloader--active#preloader
    .preloader__bg
        +image('/preloader/bg.jpg', 'background', 'preloader__bg-img')
    .preloader__svg
        svg(viewbox="0 0 110 110").preloader__circle
            circle(r='16',cx='50%',cy='50%', class="preloader__svg-img preloader__svg-img--1")
            circle(r='13',cx='50%',cy='50%', class="preloader__svg-img preloader__svg-img--2")
            circle(r='10',cx='50%',cy='50%', class="preloader__svg-img preloader__svg-img--3")
    span.preloader__text#preloader__text 0%